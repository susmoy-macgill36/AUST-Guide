<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_allresult"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/secondpage02"
    tools:context="com.example.hp.austguide.allresult">
    
    <TextView
        android:id="@+id/id1"
        android:layout_width="match_parent"
        android:layout_marginLeft="10dp"
        android:text="CHOOSE YOUR DEPARTMENT"
        android:textStyle="bold"
        android:textSize="23dp"
        android:textColor="#ea0d7c"
        android:layout_height="50dp" />
    <Button
        android:id="@+id/id2"

        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text=" Department of Architecture"
        android:textColor="#FFFFFDFD"

        android:background="@drawable/border_style"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_below="@+id/logo"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="0dp"
        />
    <Button
        android:id="@+id/id3"
        android:onClick="onClick1"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text=" Department of EEE"
        android:textColor="#FFFFFDFD"
        android:background="@drawable/border_style"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_below="@+id/id2"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="0dp"
        />
    <Button
        android:id="@+id/id4"
android:onClick="cseroutine"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text=" Department of cse"
        android:textColor="#fffdfd"
        android:background="@drawable/border_style"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_below="@+id/id3"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="0dp"
        />
    <Button

        android:id="@+id/id5"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text=" Department of TE"
        android:textColor="#FFFFFDFD"
        android:background="@drawable/border_style"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_below="@+id/id4"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="0dp"
        />
    <Button
  android:onClick="civilroutine"
        android:id="@+id/id6"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text=" Department of ce"
        android:textColor="#fffdfd"
        android:background="@drawable/border_style"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_below="@+id/id5"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="0dp"
        />
    <Button

        android:id="@+id/id7"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text=" Department of mpe"
        android:textColor="#fffdfd"
        android:background="@drawable/border_style"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_below="@+id/id6"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="0dp"
        />
    <Button

        android:id="@+id/id8"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="School of Business (SoB)"
        android:textColor="#fffdfd"
        android:background="@drawable/border_style"
        android:textStyle="bold"
        android:textSize="20dp"

        android:layout_below="@+id/id7"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="0dp"
        />


</RelativeLayout>
