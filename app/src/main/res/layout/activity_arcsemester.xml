<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_arcsemester"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/semesterpagenew"
    tools:context="com.example.hp.austguide.arcsemester">
    <TextView
        android:id="@+id/id01a"
        android:layout_width="match_parent"
        android:layout_marginLeft="10dp"
        android:text="CHOOSE YOUR SEMESTER"
        android:textStyle="bold"
        android:textSize="23dp"
        android:textColor="#e70e7b"

        android:layout_height="40dp" />
    <Button
        android:id="@+id/id02a"
android:onClick="arc11"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:text="1st year 1st semester"
        android:textColor="#FFFFFDFD"

        android:background="@drawable/border_style"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_below="@+id/id01a"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="0dp"
        />
    <Button
        android:id="@+id/id03a"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:text="1st year 2nd semester"
        android:textColor="#fffdfd"
        android:background="@drawable/border_style"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_below="@+id/id02a"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="0dp"
        />
    <Button
        android:onClick="arc21"
        android:id="@+id/id04a"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:text="2nd year 1st semester"
        android:textColor="#fffdfd"
        android:background="@drawable/border_style"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_below="@+id/id03a"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="0dp"
        />
    <Button
        android:onClick="arc22"
        android:id="@+id/id05a"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:text="2nd year  2nd  semester"
        android:textColor="#fffdfd"
        android:background="@drawable/border_style"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_below="@+id/id04a"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="0dp"
        />

    <Button
        android:onClick="arc31"
        android:id="@+id/id06a"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:text="3rd year 1st semester"
        android:textColor="#ffffff"
        android:background="@drawable/border_style"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_below="@+id/id05a"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="0dp"
        />



    <Button
        android:onClick="arc32"
        android:id="@+id/id07a"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:text="3rd year 2nd semester"
        android:textColor="#fffdfd"
        android:background="@drawable/border_style"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_below="@+id/id06a"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="0dp"
        />
    <Button
        android:id="@+id/id08a"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:text="4th year 1st semester"
        android:textColor="#fffdfd"
        android:background="@drawable/border_style"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_below="@+id/id07a"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="0dp"
        />
    <Button
        android:id="@+id/id09a"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:text="4th year 2nd semester"
        android:textColor="#fffdfd"
        android:background="@drawable/border_style"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_below="@+id/id08a"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="0dp"
        />
    <Button
        android:id="@+id/id010a"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:text="5th year 1st semester"
        android:textColor="#fffdfd"
        android:background="@drawable/border_style"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_below="@+id/id09a"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="0dp"
        />


    <Button
        android:id="@+id/id011a"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:text="5th year 2nd semester"
        android:textColor="#fffdfd"
        android:background="@drawable/border_style"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_below="@+id/id010a"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="0dp"
        />

</RelativeLayout>
