<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_loginpage"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/loginback"
    tools:context="com.example.hp.austguide.loginpage">
    <TextView
        android:id="@+id/logo1"

        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/logo"
        android:layout_marginLeft="100dp"/>
    <EditText
        android:id="@+id/id0002"
        android:layout_below="@+id/logo1"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="1dp"
        android:hint="enter username"
        android:textColorHint="#FFFFFDFD"
        android:textSize="30dp"
        android:textColor="#FFFFFDFD"

        android:background="@drawable/border_style"
        android:layout_width="match_parent"
        android:layout_height="60dp" />
    <EditText
        android:id="@+id/id0003"
        android:inputType="textPassword"
        android:layout_below="@+id/id0002"
        android:layout_marginTop="10dp"
        
        android:layout_marginLeft="1dp"
        android:hint="password"
        android:textColorHint="#FFFFFDFD"
        android:textSize="30dp"
        android:textColor="#FFFFFDFD"
        android:background="@drawable/border_style"
        android:layout_width="match_parent"
        android:layout_height="60dp" />
    <CheckBox
        android:layout_marginTop="10dp"
        android:id="@+id/chckbox"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/id0003"
        />
    <TextView
        android:layout_below="@id/id0003"
        android:layout_toRightOf="@+id/chckbox"
        android:layout_marginTop="19dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Remember password?"
        android:textSize="20dp"
        android:textColor="#FFFFFDFD"/>
<Button
    android:onClick="bclick"
    android:id="@+id/id0004"
    android:layout_marginLeft="39dp"
    android:text="login"
    android:textSize="24dp"
    android:textColor="#FFFFFDFD"
    android:background="@drawable/border_style"
    android:layout_width="220dp"
    android:layout_marginTop="3dp"
    android:layout_height="wrap_content"
    android:layout_below="@+id/chckbox"/>
    <Button
        android:onClick="signupg"
        android:layout_below="@+id/id0004"
        android:layout_width="match_parent"
        android:layout_marginTop="50dp"
        android:text="SIgn up for aust guide"
        android:textSize="20dp"
        android:textColor="#fce91a"
        android:textStyle=""
        android:background="@drawable/border_style"
        android:layout_height="wrap_content" />
</RelativeLayout>
